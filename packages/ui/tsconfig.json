{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noErrorTruncation": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}